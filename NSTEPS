t=int(input())
while t>0:
    t-=1
    x,y=map(int,input().split())
    if x==y:
        if (((x+y)//2)%2==0):
            print(x+y)
        else:
            print(x+y-1)
    elif x-y==2:
        if (((x+y)//2)%2==1):
            print(x+y)
        else:
            print(x+y-1)
    else:
        print("No Number")